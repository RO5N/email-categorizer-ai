# Basic configuration
NODE_ENV=development
PORT=3001

# Session configuration
SESSION_SECRET=your-secret-key-change-this-in-production

# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# PostgreSQL connection string for session store
# Get from: Supabase Dashboard > Project Settings > Database > Connection String > URI
# You can use either DATABASE_URL or SUPABASE_DB_CONNECTION_STRING
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Google OAuth configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# OpenAI configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Backend URL (for internal endpoint calls in serverless)
# In Vercel/production, this should be your actual backend domain (e.g., https://api.bibliob.com)
# In local dev, can be http://localhost:3001
# If not set, will auto-detect based on environment
BACKEND_URL=http://localhost:3001

# Gmail Watch / Pub/Sub configuration
# Pub/Sub topic name for Gmail push notifications
# Format: projects/{project-id}/topics/{topic-name}
# Example: projects/ai-email-sorter-476905/topics/gmail-notifications
GMAIL_PUBSUB_TOPIC=projects/your-project-id/topics/gmail-notifications

# Pub/Sub service account email for webhook verification
# This is the service account that Pub/Sub uses to authenticate webhook requests
# Format: {service-account-name}@{project-id}.iam.gserviceaccount.com
# Example: gmail-webhook-handler@ai-email-sorter-476905.iam.gserviceaccount.com
GMAIL_PUBSUB_SERVICE_ACCOUNT_EMAIL=gmail-webhook-handler@your-project-id.iam.gserviceaccount.com